		"eslint-plugin-svelte": "^3.5.1",
		"front-matter": "^4.0.2",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"object-hash": "^3.0.0",
		"postcss": "^8.5.3",
