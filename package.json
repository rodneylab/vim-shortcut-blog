{
	"name": "vim-shortcut-blog",
	"version": "1.0.0",
	"license": "BSD-3-Clause",
	"description": "Use Vim keyboard shortcuts on you blog: how to make it easy for Vim users to jump around your Svelte blog site with a keyboard and no mouse!",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints",
		"check:watch": "svelte-check --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"format": "prettier --write --plugin-search-dir=. .",
		"generate:images": "node ./generate-responsive-image-data.js",
		"generate:manifest": "node ./generate-manifest.js",
		"generate:sitemap": "node ./generate-sitemap.js",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"prepare": "husky install",
		"svelte-check": "svelte-check"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.1.0",
		"@fontsource/lato": "^4.5.10",
		"@fontsource/lora": "^4.5.12",
		"@fontsource/source-sans-pro": "^4.5.11",
		"@sveltejs/adapter-static": "^1.0.0-next.46",
		"@sveltejs/kit": "1.0.0-next.528",
		"@types/object-hash": "^2.2.1",
		"commitlint": "^17.1.2",
		"dayjs": "^1.11.6",
		"dotenv": "^16.0.3",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"front-matter": "^4.0.2",
		"husky": "^8.0.1",
		"iconify-icon": "^1.0.1",
		"mdsvex": "^0.10.6",
		"object-hash": "^3.0.0",
		"postcss": "^8.4.18",
		"postcss-html": "^1.5.0",
		"prettier": "~2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"reading-time": "1.4.0",
		"sass": "^1.55.0",
		"sharp": "^0.31.1",
		"stylelint": "^14.14.0",
		"stylelint-config-recommended-scss": "^8.0.0",
		"stylelint-config-standard": "29.0.0",
		"stylelint-scss": "^4.3.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"svelte-preprocess-import-assets": "^0.1.6",
		"vanilla-lazyload": "^17.8.3",
		"vite": "^3.2.1",
		"vite-imagetools": "^4.0.11"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/vim-shortcut-blog"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/vim-shortcut-blog/issues"
	},
	"type": "module",
	"peerDependencies": {
		"vite": "^3.0.3"
	}
}
