{
  "name": "vim-shortcut-blog",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "description": "Use Vim keyboard shortcuts on you blog: how to make it easy for Vim users to jump around your Svelte blog site with a keyboard and no mouse!",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --fail-on-hints",
    "check:watch": "svelte-check --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "format": "prettier --write --plugin-search-dir=. .",
    "generate:images": "node ./generate-responsive-image-data.js",
    "generate:manifest": "node ./generate-manifest.js",
    "generate:sitemap": "node ./generate-sitemap.js",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "prepare": "husky install",
    "svelte-check": "svelte-check"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.6",
    "@fontsource/lato": "^5.0.3",
    "@fontsource/lora": "^5.0.3",
    "@fontsource/source-sans-pro": "^5.0.3",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "1.20.5",
    "@types/object-hash": "^3.0.2",
    "commitlint": "^17.6.6",
    "dayjs": "^1.11.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.31.1",
    "front-matter": "^4.0.2",
    "husky": "^8.0.3",
    "iconify-icon": "^1.0.8",
    "mdsvex": "^0.11.0",
    "object-hash": "^3.0.0",
    "postcss": "^8.4.24",
    "postcss-html": "^1.5.0",
    "prettier": "~2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "reading-time": "1.4.0",
    "sass": "^1.63.6",
    "sharp": "^0.32.1",
    "stylelint": "^15.9.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-standard": "33.0.0",
    "stylelint-scss": "^5.0.1",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.4",
    "svelte-preprocess": "^5.0.4",
    "svelte-preprocess-import-assets": "^1.0.1",
    "vanilla-lazyload": "^17.8.3",
    "vite": "^4.3.9",
    "vite-imagetools": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/vim-shortcut-blog"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/vim-shortcut-blog/issues"
  },
  "type": "module"
}
