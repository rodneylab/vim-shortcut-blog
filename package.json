		"eslint-plugin-svelte": "^2.46.1",
		"front-matter": "^4.0.2",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"object-hash": "^3.0.0",
		"postcss": "^8.4.49",
