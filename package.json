{
	"name": "vim-shortcut-blog",
	"version": "1.0.0",
	"license": "BSD-3-Clause",
	"description": "Use Vim keyboard shortcuts on you blog: how to make it easy for Vim users to jump around your Svelte blog site with a keyboard and no mouse!",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints",
		"check:watch": "svelte-check --watch",
		"lint": "prettier --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"format": "prettier --write --plugin=prettier-plugin-svelte .",
		"generate:images": "node ./generate-responsive-image-data.js",
		"generate:manifest": "node ./generate-manifest.js",
		"generate:sitemap": "node ./generate-sitemap.js",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte .",
		"prepare": "husky install",
		"svelte-check": "svelte-check"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^18.4.3",
		"@fontsource/lato": "^5.0.18",
		"@fontsource/lora": "^5.0.8",
		"@fontsource/source-sans-pro": "^5.0.8",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "1.27.7",
		"@types/object-hash": "^3.0.6",
		"commitlint": "^18.4.3",
		"dayjs": "^1.11.10",
		"dotenv": "^16.3.1",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"front-matter": "^4.0.2",
		"husky": "^8.0.3",
		"iconify-icon": "^1.0.8",
		"mdsvex": "^0.11.0",
		"object-hash": "^3.0.0",
		"postcss": "^8.4.32",
		"postcss-html": "^1.5.0",
		"prettier": "~3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"reading-time": "1.4.0",
		"sass": "^1.69.5",
		"sharp": "^0.33.0",
		"stylelint": "^15.11.0",
		"stylelint-config-recommended-scss": "^13.1.0",
		"stylelint-config-standard": "34.0.0",
		"stylelint-scss": "^5.3.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-preprocess": "^5.1.1",
		"svelte-preprocess-import-assets": "^1.1.0",
		"vanilla-lazyload": "^17.8.5",
		"vite": "^5.0.6",
		"vite-imagetools": "^6.2.7"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/vim-shortcut-blog"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/vim-shortcut-blog/issues"
	},
	"type": "module"
}
